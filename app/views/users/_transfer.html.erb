<%= form_tag('transfer') do %>
  <% if @user.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@user.errors.count, "error") %> prohibited this user to transfer money:</h2>

      <ul>
      <% @user.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  <div class="field">
    <%= label_tag(:target_account, "Target account:") %><br>
    <%= text_field_tag(:target_account) %><br>
    <%= label_tag(:amount_transfer, "Transfer amount:") %><br>
    <%= text_field_tag(:amount_transfer) %><br>
  </div>
  <div class="actions">
    <%= submit_tag "Transfer money" %>
  </div>
<% end %>
